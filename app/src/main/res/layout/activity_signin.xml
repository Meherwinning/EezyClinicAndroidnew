<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_gradient_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/transparent"
        android:layout_height="match_parent">
        <EditText
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:layout_height="0dp" />
        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_above="@+id/center_img"
            android:layout_height="0dp">
            <ImageView
                android:layout_margin="@dimen/_20dp"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:src="@drawable/logo" />

        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginRight="@dimen/_15dp"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginBottom="@dimen/_15dp"
                android:orientation="vertical">



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                     app:errorEnabled="true"
                    app:hintEnabled="true"
                    android:textColorHint="@color/text_hint_color"
                    android:background="@drawable/background_shape_idle">

                    <com.vempower.eezyclinic.views.MyEditTextRR
                        android:id="@+id/user_id_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:background="@null"
                        android:hint="Mobile Number/Email ID"
                        android:imeOptions="actionUnspecified"
                        android:textColorHint="@color/text_hint_color"
                        android:inputType="text"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:textSize="@dimen/text_size_normal"
                        android:padding="@dimen/_2dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color" />

                </android.support.design.widget.TextInputLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/_15dp"
                android:orientation="vertical">



                <com.vempower.eezyclinic.views.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginTop="-1dp"
                    app:errorEnabled="true"
                    android:textColorHint="@color/text_hint_color"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/white"
                    android:background="@drawable/background_shape_idle">

                    <com.vempower.eezyclinic.views.MyEditTextRR
                        android:id="@+id/login_password_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:background="@null"
                        android:hint="Password"
                        android:imeOptions="actionUnspecified"
                        android:textColorHint="@color/text_hint_color"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:textSize="@dimen/text_size_normal"
                        android:padding="@dimen/_2dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color" />

                </com.vempower.eezyclinic.views.MyTextInputLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="@color/white"
                    />

            </LinearLayout>

            <com.vempower.eezyclinic.views.MyButtonRectangleRM

                android:layout_marginTop="@dimen/_15dp"
                android:id="@+id/login_bt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48dp"
                android:background="@color/white"
                android:clickable="true"
                android:maxLines="1"
                android:padding="@dimen/_4dp"
                android:text="Login"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/button_text_size"
                />

            <com.vempower.eezyclinic.views.MyTextViewRR
                android:onClick="onForgotPasswordClick"
                android:layout_width="wrap_content"
                android:text="Forgot Password"
                android:padding="@dimen/_5dp"
                android:clickable="true"
                android:layout_marginTop="@dimen/_10dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_size_normal"

                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="@dimen/_15dp"
                android:layout_width="match_parent"
                android:id="@+id/social_container"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:minHeight="@dimen/_80dp"
                android:layout_height="wrap_content"></RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
            <com.vempower.eezyclinic.views.MyTextViewRR
                android:layout_width="wrap_content"
                android:text="Don't have an account?"
                android:padding="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"

                android:layout_height="wrap_content" />
                <com.vempower.eezyclinic.views.MyTextViewRR
                  android:onClick="onSignupClick"
                    android:layout_width="wrap_content"
                    android:text="Sign up"
                    android:clickable="true"
                    android:padding="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_normal"

                    android:layout_height="wrap_content" />
            </LinearLayout>
            <com.vempower.eezyclinic.views.MyButtonRectangleRM

                android:visibility="invisible"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5dp"
                android:background="@color/white"
                android:clickable="true"
                android:maxLines="1"
                android:padding="@dimen/_4dp"
                android:text="Login"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/button_text_size"
                />


        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
