<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:background="@color/transparent"
    android:gravity="center"
    android:paddingLeft="@dimen/_5dp"
    android:paddingRight="@dimen/_5dp"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <com.prolificinteractive.materialcalendarview.DirectionButton
            android:id="@+id/button_past"
             android:layout_width="wrap_content"
            android:padding="@dimen/_6dp"
            android:clickable="true"

            android:src="@drawable/left_arrow"
            android:layout_height="wrap_content" />


             <TextView                        android:fontFamily="@font/roboto"
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:ems="8"
                style="@style/my_TextAppearance.MaterialCalendarWidget.Header"

                android:singleLine="true"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/_5dp"

                android:layout_marginRight="@dimen/_5dp"
                android:layout_height="match_parent" />



        <com.prolificinteractive.materialcalendarview.DirectionButton
            android:id="@+id/button_future"
            android:onClick="onFutureButtonClick"
            android:layout_width="wrap_content"
            android:src="@drawable/right_arrow"
            android:padding="@dimen/_6dp"
            android:clickable="true"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>

