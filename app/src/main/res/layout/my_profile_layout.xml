<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"

    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_view_linear"

            android:layout_width="match_parent"
            android:layout_height="@dimen/_185dp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/image_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/canvas_100x100"
                    android:gravity="center"

                    >

                    <ImageView
                        android:id="@+id/profile_iv"
                        style="@style/image_fit_toparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/profile_icon" />
                </LinearLayout>

                <ImageView
                    android:layout_toRightOf="@+id/image_linear"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="-20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cam_add" />
                <!-- <ImageView
                     android:id="@+id/profile_iv"
                     android:padding="@dimen/_5dp"
                     android:layout_width="@dimen/_60dp"
                     android:layout_centerVertical="true"
                     android:src="@mipmap/ic_launcher"
                     android:layout_height="@dimen/_60dp" />-->

                <com.vempower.eezyclinic.views.MyTextViewRB
                    android:id="@+id/doctor_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_linear"
                    android:layout_marginTop="@dimen/_5dp"
                    android:gravity="center"
                    android:hint="Patient Name"
                    android:maxLines="1"
                    android:textColorHint="#8a000000"
                    android:textSize="@dimen/_16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#de000000"


                    />

                <LinearLayout
                    android:id="@+id/designation_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctor_name_tv"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.vempower.eezyclinic.views.MyTextViewRR
                        android:id="@+id/doctor_designation_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:hint="Details"
                        android:textSize="@dimen/_12sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#999999"

                        />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_linear1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.3"
                    android:layout_marginRight="@dimen/_12dp"
                    android:background="@color/black" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"

                    android:layout_height="@dimen/_50dp"
                    android:background="@drawable/background_shape_idle"

                    android:textColorHint="#8a000000"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <com.vempower.eezyclinic.views.MyTextViewRR
                       android:id="@+id/date_of_birth_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="Date of Birth"
                        android:imeOptions="actionUnspecified"
                        android:inputType="text"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:padding="@dimen/_2dp"
                        android:singleLine="true"
                        android:textColor="#de000000"
                        android:textColorHint="#8a000000"
                        android:textSize="@dimen/_14dp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.3"
                    android:layout_marginRight="@dimen/_12dp"
                    android:background="@color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"

                    android:layout_height="@dimen/_50dp"
                    android:background="@drawable/background_shape_idle"

                    android:textColorHint="#8a000000"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <com.vempower.eezyclinic.views.MyEditTextBlackCursorRR
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="Blood Group"
                        android:imeOptions="actionUnspecified"
                        android:inputType="text"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:padding="@dimen/_2dp"
                        android:singleLine="true"
                        android:textColor="#de000000"
                        android:textColorHint="#8a000000"
                        android:textSize="@dimen/_14dp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.3"
                    android:layout_marginRight="@dimen/_12dp"
                    android:background="@color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"

                    android:layout_height="@dimen/_50dp"
                    android:background="@drawable/background_shape_idle"

                    android:textColorHint="#8a000000"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <com.vempower.eezyclinic.views.MyEditTextBlackCursorRR
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="Height"
                        android:imeOptions="actionUnspecified"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:padding="@dimen/_2dp"
                        android:singleLine="true"


                        android:textColor="#de000000"
                        android:textColorHint="#8a000000"
                        android:textSize="@dimen/_14dp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.3"
                    android:layout_marginRight="@dimen/_12dp"
                    android:background="@color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"

                    android:layout_height="@dimen/_50dp"
                    android:background="@drawable/background_shape_idle"

                    android:textColorHint="#8a000000"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <com.vempower.eezyclinic.views.MyEditTextBlackCursorRR
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="Known Allergies"
                        android:imeOptions="actionUnspecified"
                        android:inputType="text"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:padding="@dimen/_2dp"
                        android:singleLine="true"
                        android:textColor="#de000000"
                        android:textColorHint="#8a000000"
                        android:textSize="@dimen/_14dp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.3"
                    android:layout_marginRight="@dimen/_12dp"
                    android:background="@color/black" />

            </LinearLayout>



        </LinearLayout>

            <TextView
                android:id="@+id/profile_top_details_mask_tv"
                android:layout_alignLeft="@+id/top_linear1"
                android:layout_alignTop="@+id/top_linear1"
                android:layout_alignEnd="@+id/top_linear1"
                android:layout_alignBottom="@+id/top_linear1"
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="@color/transparent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/profile_content_layout"></include>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/profile_emergency_contact_layout"></include>

        </LinearLayout>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/profile_insurance_layout"></include>

        </LinearLayout>



    </LinearLayout>
    </ScrollView>


</LinearLayout>