<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_gradient_bg">
    <EditText
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/transparent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_above="@+id/center_img"
            android:layout_height="0dp">
            <TextView
                android:visibility="gone"
                android:id="@+id/opt_display_tv"
                android:layout_width="match_parent"
                android:text="OTP"
                android:textSize="@dimen/_15dp"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_margin="@dimen/_20dp"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:src="@drawable/logo" />

        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginRight="@dimen/_8dp"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15dp"
                android:orientation="vertical">



                <com.vempower.eezyclinic.views.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:background="@drawable/background_shape_idle"
                    android:textColorHint="@color/text_hint_color"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/white">

                    <com.vempower.eezyclinic.views.MyEditTextRR
                        android:id="@+id/otp_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:background="@null"
                        android:hint="Enter OTP"
                        android:imeOptions="actionUnspecified"
                        android:textColorHint="@color/text_hint_color"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:textSize="@dimen/text_size_normal"

                        android:padding="@dimen/_2dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color" />

                </com.vempower.eezyclinic.views.MyTextInputLayout>




                <TextView
                    android:layout_marginRight="@dimen/_12dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/_15dp"
                android:orientation="vertical">



                <com.vempower.eezyclinic.views.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:background="@drawable/background_shape_idle"
                    android:textColorHint="@color/text_hint_color"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/white">

                    <com.vempower.eezyclinic.views.MyEditTextRR
                       android:id="@+id/new_password_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:background="@null"
                        android:hint="New Password"
                        android:imeOptions="actionUnspecified"
                        android:textColorHint="@color/text_hint_color"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:textSize="@dimen/text_size_normal"
                        android:padding="@dimen/_2dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color" />

                </com.vempower.eezyclinic.views.MyTextInputLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/_12dp"
                    android:background="@color/white"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/_15dp"
                android:orientation="vertical">



                <com.vempower.eezyclinic.views.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:background="@drawable/background_shape_idle"
                    android:textColorHint="@color/text_hint_color"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/white">

                    <com.vempower.eezyclinic.views.MyEditTextRR
                        android:id="@+id/re_password_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:background="@null"
                        android:hint="Confirm Password"
                        android:imeOptions="actionUnspecified"
                        android:textColorHint="@color/text_hint_color"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:textSize="@dimen/text_size_normal"
                        android:padding="@dimen/_2dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color" />

                </com.vempower.eezyclinic.views.MyTextInputLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/_12dp"
                    android:background="@color/white"
                    />

            </LinearLayout>

            <com.vempower.eezyclinic.views.MyButtonRectangleRM
                android:layout_marginTop="@dimen/_15dp"
                android:id="@+id/reset_password_bt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48dp"
                android:background="@color/white"
                android:clickable="true"
                android:maxLines="1"
                android:padding="@dimen/_4dp"
                android:text="Reset Password"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/button_text_size"
                />




        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
