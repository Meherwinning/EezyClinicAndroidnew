<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/_20dp"
    android:paddingTop="@dimen/_20dp"
    android:paddingRight="@dimen/_20dp"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/edit_history_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:textColorHint="#61000000"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <com.vempower.eezyclinic.views.MyEditTextBlackCursorRR
                    android:id="@+id/patient_id_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter Patient ID"

                    android:maxLength="50"
                    android:maxLines="1"

                    android:background="@null"

                    android:textSize="@dimen/_16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#de000000"
                    />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/_12dp"
                android:alpha="0.3"
                android:background="@color/black" />

        </LinearLayout>



    </RelativeLayout>
    <android.support.v7.widget.AppCompatButton

        android:layout_alignParentBottom="true"
        android:id="@+id/submit_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:clickable="true"
        android:layout_marginLeft="@dimen/_24dp"
        android:layout_marginRight="@dimen/_24dp"
        android:maxLines="1"
        android:padding="@dimen/_4dp"
        android:textAllCaps="false"
        android:background="@drawable/button_bg"

        android:textSize="@dimen/_16sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#ffffff"

        android:text="Search"

        />

</RelativeLayout>