<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8dp"
    android:paddingBottom="@dimen/_4dp"
    android:paddingTop="@dimen/_4dp"
    android:background="@drawable/health_checks_item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35dp"

        android:orientation="horizontal"

        android:layout_weight="3"
        >

        <com.vempower.eezyclinic.views.MyEditTextBlackCursorRR
            android:id="@+id/weight_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_marginRight="@dimen/_3dp"
            android:background="@drawable/health_checks_view_selector"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxLength="4"
            android:hint="0"
            android:textColor="#ee7b7979"
            android:textSize="@dimen/_14dp" />

        <com.vempower.eezyclinic.views.MyEditTextBlackCursorRR
            android:id="@+id/height_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_marginRight="@dimen/_3dp"
            android:background="@drawable/health_checks_view_selector"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxLength="4"
            android:hint="0"
            android:textColor="#ee7b7979"
            android:textSize="@dimen/_14dp" />

        <com.vempower.eezyclinic.views.MyEditTextBlackCursorRR
            android:id="@+id/hba1c_et"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_marginRight="@dimen/_3dp"
            android:background="@drawable/health_checks_view_selector"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxLength="4"
            android:hint="0"
            android:textColor="#ee7b7979"
            android:textSize="@dimen/_14dp" />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="@dimen/_30dp">

        <com.vempower.eezyclinic.views.MyTextViewRR
            android:id="@+id/date_tv"
            android:layout_toLeftOf="@+id/imageview_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_marginRight="@dimen/_3dp"
            android:background="@drawable/health_checks_view_selector"
            android:clickable="true"
            android:enabled="false"
            android:gravity="left|center_vertical"
            android:hint="dd-mm-yyyy"
            android:textColor="#ee7b7979"
            android:textSize="@dimen/_14dp" />


        <LinearLayout
            android:id="@+id/imageview_linear"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_width="@dimen/_90dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ok_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:padding="@dimen/_8dp"
                android:src="@drawable/save_record" />

            <ImageView
                android:id="@+id/edit_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:padding="@dimen/_8dp"
                android:src="@drawable/edit_record" />

            <ImageView
                android:id="@+id/delete_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:padding="@dimen/_8dp"
                android:src="@drawable/cancel_delete_record" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>