<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5dp"
    android:layout_marginTop="@dimen/_7dp"
    android:layout_marginRight="@dimen/_5dp"
    android:layout_marginBottom="@dimen/_5dp"
    android:background="@drawable/view_selector"
    android:clickable="true"
    android:elevation="@dimen/_5dp"
    card_view:cardBackgroundColor="@color/white"


    card_view:cardCornerRadius="@dimen/_5dp"
    card_view:cardElevation="@dimen/_6dp">

    <!-- <FrameLayout
         android:background="@drawable/card_edge"
         android:layout_width="1dp"
         android:layout_height="match_parent"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_10dp"
        android:paddingTop="@dimen/_12dp"

        android:paddingRight="@dimen/_10dp"
        android:paddingBottom="@dimen/_12dp"

        >


        <LinearLayout
            android:id="@+id/content_linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout


                android:layout_width="0dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_weight="1"

                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:hint="Title"

                        android:text="Notification send from "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sp"

                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/from_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:hint="Name"

                        android:text=""
                        android:textColor="#62bb50"
                        android:textSize="@dimen/_15sp"

                        android:textStyle="normal" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/message_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Message"
                        android:textColor="#212121"
                        android:text=""

                        android:textSize="@dimen/_14sp"
                        android:textStyle="normal" />


                </LinearLayout>


            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delete_bt"
                 android:layout_gravity="center"
                 android:paddingRight="@dimen/_18dp"

                 android:src="@drawable/right_arr2"


                android:layout_width="@dimen/_72dp"
                android:layout_height="@dimen/_34dp"
                android:clickable="true"
                android:maxLines="1"
                android:padding="@dimen/_4dp"
                android:textAllCaps="false"
                android:background="@drawable/background_reject"

                android:textSize="@dimen/_14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#ffffff"

                android:text="Delete"
                />
        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>
