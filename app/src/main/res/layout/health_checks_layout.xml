<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

   <!-- app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
    android:textStyle="normal"
   -->
    <android.support.design.widget.TabLayout
        android:id="@+id/tab1"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42dp"
        app:tabMinWidth="@dimen/_15dp"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        android:background="@color/white"
        android:textSize="@dimen/_10dp"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabTextColor="@color/dash_board_text_color"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabPaddingBottom="@dimen/_1dp"
        app:tabIndicatorHeight="@dimen/_2dp"
        app:tabMaxWidth="0dp"
        app:tabGravity="center"
        app:tabMode="scrollable"
        app:tabPadding="@dimen/_1dp"

        />

    <com.vempower.eezyclinic.views.NonSwipeableViewPager
        android:layout_below="@+id/tab1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />



</RelativeLayout>