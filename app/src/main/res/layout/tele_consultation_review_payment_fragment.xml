<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">


          <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_19dp"


            android:layout_height="wrap_content">


            <TextView                        android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sp"
                android:textColor="#000000"
                android:text="Clinic Name:"

                />
            <TextView                        android:fontFamily="@font/roboto"
                android:id="@+id/clinic_name_tv"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_6dp"

                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:textColor="#95989a"
                android:text="-"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_19dp"


            android:layout_height="wrap_content">


            <TextView                        android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sp"
                android:textColor="#000000"
                android:text="Doctor Name:"

                />
            <TextView                        android:fontFamily="@font/roboto"
                android:id="@+id/doctor_name_tv"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_6dp"

                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:textColor="#95989a"
                android:text="-"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_19dp"


            android:layout_height="wrap_content">


            <TextView                        android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sp"
                android:textColor="#000000"
                android:text="Appointment ID:"

                />
            <TextView                        android:fontFamily="@font/roboto"
                android:id="@+id/appointment_id_tv"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_6dp"

                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:textColor="#95989a"
                android:text="-"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_19dp"


            android:layout_height="wrap_content">


            <TextView                        android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sp"
                android:textColor="#000000"
                android:text="Appointment Time:"

                />
            <TextView                        android:fontFamily="@font/roboto"
                android:id="@+id/date_time_tv"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_6dp"

                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:textColor="#95989a"
                android:text="-"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_19dp"


            android:layout_height="wrap_content">


            <TextView                        android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sp"
                android:textColor="#000000"
                android:text="Consultation Fee:"

                />
            <TextView                        android:fontFamily="@font/roboto"
                android:id="@+id/consultation_fee_tv"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_6dp"

                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:textColor="#95989a"
                android:text="-"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/makepayment_linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_15dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginRight="@dimen/_15dp"

            android:background="#212121"
            android:orientation="horizontal">



            <TextView    android:fontFamily="@font/roboto"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ef6b53"
                android:gravity="center"
                android:textSize="@dimen/_15sp"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:onClick="sendMessage"
                android:text="Proceed to Make Payment"

                />

        </LinearLayout>




</LinearLayout>
