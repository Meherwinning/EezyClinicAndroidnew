<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_20dp"
            android:paddingTop="@dimen/_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                 <TextView                        android:fontFamily="@font/roboto"
                    android:id="@+id/medicine_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:hint="Medicine Name"
                    android:textColorHint="#debebaba"
                    android:textStyle="normal"
                    android:textColor="#de000000"
                    />

                 <TextView                        android:fontFamily="@font/roboto"
                    android:id="@+id/strength_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="normal"
                    android:textColor="#de000000"
                    android:hint="Strength"
                    android:textColorHint="#debebaba"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal">

                 <TextView                        android:fontFamily="@font/roboto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dosage: "
                    android:textColor="#8a000000"
                    android:textSize="@dimen/_14sp"
                    android:textStyle="normal" />

                 <TextView                        android:fontFamily="@font/roboto"
                    android:id="@+id/dosage_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8a000000"
                    android:textSize="@dimen/_14sp"
                    android:textStyle="normal"
                    android:hint="-"
                    android:textColorHint="#debebaba"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal">

                 <TextView                        android:fontFamily="@font/roboto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Before food : "
                    android:textColor="#8a000000"
                    android:textSize="@dimen/_14sp"
                    android:textStyle="normal" />

                 <TextView                        android:fontFamily="@font/roboto"
                    android:id="@+id/before_food_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8a000000"
                    android:textSize="@dimen/_14sp"
                    android:textStyle="normal"

                    android:hint="-"
                    android:textColorHint="#debebaba"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal">

                 <TextView                        android:fontFamily="@font/roboto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Duration: "
                    android:textColor="#8a000000"
                    android:textSize="@dimen/_14sp"
                    android:textStyle="normal" />

                 <TextView                        android:fontFamily="@font/roboto"
                    android:id="@+id/course_duration_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8a000000"
                    android:textSize="@dimen/_14sp"
                    android:textStyle="normal"

                    android:hint="-"
                    android:textColorHint="#debebaba"

                    />
            </LinearLayout>

















        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_10dp"
            android:paddingTop="@dimen/_5dp"
            android:alpha="0.3"
            android:layout_marginBottom="@dimen/_10dp"
            android:background="@color/black" />
    </LinearLayout>

</LinearLayout>