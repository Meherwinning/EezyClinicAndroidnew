<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5dp"
    android:layout_marginLeft="@dimen/_5dp"
    android:layout_marginRight="@dimen/_5dp"
    android:layout_marginTop="@dimen/_7dp"
    android:background="@drawable/view_selector"
    android:clickable="true"
    card_view:cardBackgroundColor="@color/white"
    android:elevation="@dimen/_5dp"


    card_view:cardElevation="@dimen/_6dp"
    card_view:cardCornerRadius="@dimen/_5dp"
    >

   <!-- <FrameLayout
        android:background="@drawable/card_edge"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:paddingTop="@dimen/_12dp"
        >

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/img_linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10dp"
            android:gravity="center"

            >

            <LinearLayout
                android:id="@+id/image_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/canvas_85x85"
                android:gravity="center"

                >

                <ImageView
                    android:id="@+id/profile_iv"
                    style="@style/image_fit_toparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_icon" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_linear1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_10dp"

            android:orientation="vertical">

            <com.vempower.eezyclinic.views.MyTextViewRM
                android:id="@+id/doctor_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sp"
                android:textColor="#000000"
                android:text="-"/>

            <LinearLayout
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.vempower.eezyclinic.views.MyTextViewRR
                    android:id="@+id/clinic_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sp"
                    android:textColor="#95989a"
                    android:text="-"
                    />

                <com.vempower.eezyclinic.views.MyTextViewRR
                    android:id="@+id/date_and_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sp"
                    android:textColor="#505050"
                    android:text="-"                    />


            </LinearLayout>

        </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="@dimen/_20dp"

                android:src="@drawable/right_arr2"
                android:layout_height="wrap_content" />
        </LinearLayout>







    </RelativeLayout>


</android.support.v7.widget.CardView>
