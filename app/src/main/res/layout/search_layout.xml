                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15dp"

                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"

                            android:layout_height="@dimen/_50dp"
                            android:background="@drawable/background_shape_idle"

                            android:textColorHint="@color/text_hint_color"
                            app:errorEnabled="true"
                            app:hintEnabled="true"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <!--<EditText                                          android:fontFamily="@font/roboto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/_2dp"
                                android:background="@null"
                                android:gravity="left|center_vertical"
                                android:hint="Locality"
                                android:imeOptions="actionUnspecified"
                                android:inputType="text"
                                android:maxLength="50"
                                android:maxLines="1"
                                android:padding="@dimen/_2dp"
                                android:singleLine="true"

                                android:textColor="@color/text_color"
                                android:textColorHint="@color/text_hint_color"
                                android:textSize="@dimen/button_text_size" />-->
                            <com.vempower.eezyclinic.views.ClearableAutoCompleteTextView
                                android:id="@+id/google_places_actv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_5dp"
                                android:background="@null"
                                android:hint="Locality"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLength="120"
                                android:maxLines="1"
                                android:paddingTop="@dimen/_3dp"
                                android:paddingRight="@dimen/_5dp"
                                android:singleLine="true"
                                android:textColor="@color/text_color"

                                android:textColorHint="@color/text_hint_color"
                                android:textSize="@dimen/button_text_size"

                                />

                        </android.support.design.widget.TextInputLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="@dimen/_12dp"
                            android:background="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15dp"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50dp"
                            android:orientation="horizontal"
                            android:padding="@dimen/_2dp">

                            <com.vempower.eezyclinic.views.ClearableAutoCompleteTextView
                                android:id="@+id/doctor_clinic_names_actv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_5dp"
                                android:background="@null"
                                android:hint="Doctor/Clinic Name"
                                android:imeOptions="actionDone"
                                android:inputType="text"
                                android:maxLength="120"
                                android:maxLines="1"
                                android:paddingTop="@dimen/_3dp"
                                android:paddingRight="@dimen/_5dp"
                                android:singleLine="true"
                                android:textColor="@color/text_color"

                                android:textColorHint="@color/text_hint_color"
                                android:textSize="@dimen/button_text_size"

                                />

                            <!--            <com.vempower.eezyclinic.views.CustomSpinnerSelection
                                            android:id="@+id/speciality_type_spinner"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:backgroundTint="@color/white"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:foregroundTint="@color/black"
                                            android:layout_marginRight="@dimen/_5dp"

                                            android:spinnerMode="dropdown"
                                            android:textColor="@color/text_color"
                                            android:textSize="@dimen/button_text_size" />
                        -->
                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="@dimen/_12dp"
                            android:background="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/advance_search_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_10dp"
                        android:clickable="true"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10dp">

                        <ImageView
                            android:id="@+id/advanced_search_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_15dp" />

                        <TextView
                            android:id="@+id/advance_search_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:gravity="right"
                            android:text="Advance Search"
                            android:textColor="@color/white"

                            android:textSize="@dimen/button_text_size" />
                    </LinearLayout>

                    <com.github.aakira.expandablelayout.ExpandableLinearLayout
                        android:id="@+id/expandableLayout_advance_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/top_linear"
                        android:orientation="vertical"

                        app:ael_duration="300"
                        app:ael_expanded="false">

                        <include layout="@layout/advanced_search_items">

                        </include>


                    </com.github.aakira.expandablelayout.ExpandableLinearLayout>


                    <com.vempower.eezyclinic.views.MyButtonRectangleRM

                        android:id="@+id/search_bt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_48dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:padding="@dimen/_4dp"
                        android:text="Search"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        android:textSize="@dimen/button_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>