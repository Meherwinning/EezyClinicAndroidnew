<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_above="@+id/pin_relative"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/_15dp"
                android:orientation="vertical">



                <com.vempower.eezyclinic.views.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:background="@drawable/background_shape_idle"
                    android:textColorHint="#212121"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    app:passwordToggleTint="#99212121">

                    <com.vempower.eezyclinic.views.MyEditTextBlackCursorRR
                        android:id="@+id/registed_mobile_num_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:background="@null"
                        android:imeOptions="actionUnspecified"
                        android:textColorHint="#212121"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:padding="@dimen/_2dp"
                        android:singleLine="true"

                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#212121"
                        android:hint="Registerd Mobile Number"
                        />

                </com.vempower.eezyclinic.views.MyTextInputLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.15"
                    android:layout_marginRight="@dimen/_12dp"
                    android:background="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/_15dp"
                android:orientation="vertical">



                <com.vempower.eezyclinic.views.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:background="@drawable/background_shape_idle"
                    android:textColorHint="#212121"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    app:passwordToggleTint="#99212121">

                    <com.vempower.eezyclinic.views.MyEditTextBlackCursorRR
                        android:id="@+id/new_password_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:background="@null"
                        android:imeOptions="actionUnspecified"
                        android:textColorHint="#212121"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:padding="@dimen/_2dp"
                        android:singleLine="true"

                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#212121"
                        android:hint="Change mobile number"
                        />

                </com.vempower.eezyclinic.views.MyTextInputLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.15"
                    android:layout_marginRight="@dimen/_12dp"
                    android:background="@color/black"
                    />

            </LinearLayout>




        </LinearLayout>
    </ScrollView>



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pin_relative"
        android:layout_width="match_parent"
        android:layout_above="@+id/appointment_bt"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/firstLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/firstPinView"
            android:layout_alignParentTop="true"
            android:text="Pin" />

        <com.vempower.eezyclinic.views.PinView
            android:id="@+id/firstPinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstLabel"
            android:layout_centerHorizontal="true"
            android:enabled="true"
            android:clickable="true"
            android:layout_margin="@dimen/_14dp"
            android:inputType="number"
            android:textColor="@color/text_colors" />

        <TextView
            android:id="@+id/secondLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/secondPinView"
            android:layout_below="@+id/firstPinView"
            android:text="password" />

        <com.vempower.eezyclinic.views.PinView
            android:id="@+id/secondPinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondLabel"
            android:enabled="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_14dp"
            android:clickable="true"
            android:inputType="numberPassword"
            android:textColor="@color/line_colors" />
    </RelativeLayout>


    <android.support.v7.widget.AppCompatButton

        android:layout_alignParentBottom="true"
        android:id="@+id/appointment_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:clickable="true"
        android:layout_marginLeft="@dimen/_24dp"
        android:layout_marginRight="@dimen/_24dp"
        android:maxLines="1"
        android:padding="@dimen/_4dp"
        android:textAllCaps="false"
        android:background="@drawable/button_bg"

        android:textSize="@dimen/_16sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#ffffff"

        android:text="Change Password"

        />




</RelativeLayout>