<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"


    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginBottom="@dimen/_30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15sp"
        android:layout_height="wrap_content">
    <RelativeLayout

        android:paddingTop="@dimen/_4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView                android:fontFamily="@font/roboto_medium"
            android:id="@+id/docotr_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:textSize="@dimen/_16sp"
             
            android:textStyle="normal"
            android:textColor="#000000"
            android:hint="Doctor Name"
            />



    </RelativeLayout>
     <TextView                    android:fontFamily="@font/roboto"
        android:layout_marginTop="@dimen/_6dp"
        android:id="@+id/specialities_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"

        android:layout_marginRight="@dimen/_5dp"
        android:textSize="@dimen/_14sp"
         
        android:textStyle="normal"
        android:textColor="#95989a"
        android:hint="Specialities"
        />
         <TextView                    android:fontFamily="@font/roboto"
            android:id="@+id/clinic_name_tv"

            android:layout_marginTop="@dimen/_6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/_5dp"
            android:textSize="@dimen/_14sp"
             
            android:textStyle="normal"
            android:textColor="#95989a"
            android:hint="Clinic Name"

            />
         <TextView                    android:fontFamily="@font/roboto"
            android:id="@+id/date_and_time_tv"
            android:layout_marginTop="@dimen/_9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/_5dp"
            android:textSize="@dimen/_14sp"
             
            android:textStyle="normal"
            android:textColor="#95989a"
            android:hint="Date and Time"
            />
        <RelativeLayout
            android:layout_marginTop="@dimen/_20dp"
            android:layout_width="match_parent"
            android:background="@color/transparent"
            android:layout_height="wrap_content">

        <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_height="match_parent">

             <TextView                    android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="@dimen/_3dp"
                android:paddingBottom="@dimen/_3dp"
                android:textSize="@dimen/_16sp"
                 
                android:textStyle="normal"
                android:text="Waiting time"
                android:textColor="#000000"
                />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/waiting_time_rating"
                android:layout_width="@dimen/_180dp"
                android:layout_height="@dimen/_30dp"
                android:layout_marginRight="@dimen/_8dp"
                app:mrb_progressTint="#efce4a"
                app:mrb_fillBackgroundStars="true"
                android:stepSize="1.0"


                app:mrb_progressBackgroundTint="@color/bottom_text_color"
                app:mrb_secondaryProgressTint="@color/white"
                />

            <!-- style="@style/Widget.MaterialRatingBar.RatingBar"-->
           <!--  <TextView                    android:fontFamily="@font/roboto"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/_4dp"
                android:layout_marginRight="@dimen/_4dp"
                android:textSize="13sp"
                android:textColor="#cc212121"
                android:textStyle="bold" />
-->



        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

             <TextView                    android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="@dimen/_3dp"
                android:paddingBottom="@dimen/_3dp"
                android:textSize="@dimen/_16sp"
                android:singleLine="true"
                android:maxLines="1"
                 
                android:textStyle="normal"
                android:text="Diagnosis"
                android:textColor="#000000"
                />
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/diagnasis_ratingbar"
                android:layout_width="@dimen/_180dp"
                android:layout_height="@dimen/_30dp"
                android:layout_marginRight="@dimen/_8dp"
                app:mrb_progressTint="#efce4a"
                app:mrb_fillBackgroundStars="true"
                android:stepSize="1.0"

                app:mrb_progressBackgroundTint="@color/bottom_text_color"
                app:mrb_secondaryProgressTint="@color/white"
                />




        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

             <TextView                    android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="@dimen/_3dp"
                android:paddingBottom="@dimen/_3dp"
                android:textSize="@dimen/_16sp"
                android:singleLine="true"
                android:maxLines="1"
                 
                android:textStyle="normal"
                android:text="Customer Service"
                android:textColor="#000000"
                />
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/customer_service_rating_bar"
                android:layout_width="@dimen/_180dp"
                android:layout_height="@dimen/_30dp"
                android:layout_marginRight="@dimen/_8dp"
                app:mrb_progressTint="#efce4a"
                app:mrb_fillBackgroundStars="true"
                android:stepSize="1.0"

                app:mrb_progressBackgroundTint="@color/bottom_text_color"
                app:mrb_secondaryProgressTint="@color/white"
                />





        </LinearLayout>




    </LinearLayout>


        </RelativeLayout>
        <CheckBox                        android:fontFamily="@font/roboto"
            android:id="@+id/recommended_doctor_checkbox"
            android:layout_width="match_parent"
            android:padding="@dimen/_10dp"
            android:gravity="center|left"
            android:layout_height="match_parent"
            android:button="@drawable/checkbox_selector1"
            android:textSize="@dimen/_16sp"
            android:textColor="#95989a"
            android:text="Recommend Doctor ?"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/save_note_bt"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_marginTop="@dimen/_15dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/background_shape_idle"

                android:textColorHint="#8a000000"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <com.vempower.eezyclinic.views.MyEditTextBlackCursor            android:fontFamily="@font/roboto"
                    android:id="@+id/write_areview_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:minHeight="@dimen/_25dp"
                    android:hint="Write a Review"
                    android:textSize="@dimen/_16sp"
                     
                    android:textStyle="normal"
                    android:textColor="#de000000"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/_12dp"
                android:alpha="0.3"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/display_name_in_reviews_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"

                android:orientation="horizontal">

                 <TextView                    android:fontFamily="@font/roboto"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:clickable="true"
                     
                    android:paddingBottom="@dimen/_10dp"
                    android:paddingTop="@dimen/_10dp"
                    android:textStyle="normal"
                    android:textSize="@dimen/_16sp"
                    android:textColor="#000000"
                    android:text="Display my name in Reviews"

                    />

                   <com.rey.material.widget.Switch
                    android:id="@+id/display_name_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_18dp"
                    app:sw_thumbElevation="3dp"


                    app:sw_thumbRadius="@dimen/_12dp"

                    app:sw_trackSize="@dimen/_14dp">
                    >
                </com.rey.material.widget.Switch>

            </LinearLayout>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton

            android:layout_alignParentBottom="true"
            android:id="@+id/submit_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48dp"
            android:layout_marginTop="@dimen/_25dp"
            android:layout_marginBottom="@dimen/_30dp"
            android:clickable="true"
            android:layout_marginLeft="@dimen/_24dp"
            android:layout_marginRight="@dimen/_24dp"
            android:maxLines="1"
            android:padding="@dimen/_4dp"
            android:textAllCaps="false"
            android:background="@drawable/button_bg"

            android:textSize="@dimen/_16sp"
             
            android:textStyle="normal"
            android:textColor="#ffffff"

            android:text="Submit"

            />

    </LinearLayout>
    </ScrollView>



</LinearLayout>