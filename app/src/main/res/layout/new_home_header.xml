<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top_view_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
       android:background="@color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:lineSpacingExtra="2sp"
                android:text="We spare the queue"
                android:textColor="@color/white"

                android:textSize="@dimen/_24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:gravity="center"
                android:fontFamily="@font/roboto_light"
                android:lineSpacingExtra="2sp"
                android:text="at the doctor's for you"
                android:textColor="@color/white"

                android:textSize="@dimen/title_text_size" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_demo_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:orientation="horizontal"
            android:weightSum="5.5">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/search_img" />

                <TextView                android:fontFamily="@font/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_11dp"

                    android:clickable="true"
                    android:gravity="center"
                    android:text="Search Doctor\nby speciality"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/arrw_img" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/location_img" />

                <TextView                android:fontFamily="@font/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_11dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Search by\nLocality"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="bottom"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:src="@drawable/arrw_b_img" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/schedule_img" />

                <TextView                android:fontFamily="@font/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_11dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Schedule\nAppointment"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"

                    />


            </LinearLayout>


        </LinearLayout>
        <com.vempower.eezyclinic.views.MyButtonRectangleRM


            android:id="@+id/search_bt"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:clickable="true"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="Book Appointment"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />



    </LinearLayout>
