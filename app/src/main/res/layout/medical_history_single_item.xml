<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5dp"
    android:layout_marginLeft="@dimen/_5dp"
    android:layout_marginRight="@dimen/_5dp"
    android:layout_marginTop="@dimen/_7dp"
    android:background="@drawable/view_selector"
    android:clickable="true"
    card_view:cardBackgroundColor="@color/white"
    android:elevation="@dimen/_5dp"


    card_view:cardElevation="@dimen/_6dp"
    card_view:cardCornerRadius="@dimen/_5dp"
    >

    <!-- <FrameLayout
         android:background="@drawable/card_edge"
         android:layout_width="1dp"
         android:layout_height="match_parent"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_12dp"
        android:paddingBottom="@dimen/_12dp"

        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"

        >



        <LinearLayout
            android:id="@+id/content_linear1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout


                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_10dp"

                android:orientation="vertical">


                <TextView                android:fontFamily="@font/roboto_medium"
                    android:id="@+id/content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="normal"
                    android:textColor="#212121"
                    android:hint="Content"

                    />

                <LinearLayout
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                         <TextView    android:fontFamily="@font/roboto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sp"
                            android:textStyle="normal"
                            android:textColor="#212121"
                            android:text="Added by: "
                            />

                         <TextView    android:fontFamily="@font/roboto"
                            android:id="@+id/edited_by_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sp"
                            android:textStyle="normal"
                            android:textColor="#212121"
                            android:hint="Name"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                         <TextView    android:fontFamily="@font/roboto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sp"
                            android:textStyle="normal"
                            android:textColor="#212121"
                            android:text="Added on: "
                            />

                     <TextView    android:fontFamily="@font/roboto"
                        android:id="@+id/date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sp"
                        android:textStyle="normal"
                        android:textColor="#212121"
                        android:hint="Date"
                        />
                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:visibility="gone"
                android:id="@+id/menu_iv"
                android:clickable="true"
                android:paddingLeft="@dimen/_14dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="@dimen/_18dp"

                android:src="@drawable/more_icon"
                android:layout_height="match_parent" />
        </LinearLayout>







    </RelativeLayout>


</androidx.cardview.widget.CardView>
