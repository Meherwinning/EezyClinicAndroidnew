<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_above="@+id/appointment_bt"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
    <LinearLayout

        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/_15dp"
            android:orientation="vertical">



            <com.vempower.eezyclinic.views.MyTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/background_shape_idle"
                android:textColorHint="#212121"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#99212121">

                <com.vempower.eezyclinic.views.MyEditTextBlackCursorRR
                    android:id="@+id/current_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_marginBottom="@dimen/_2dp"
                    android:background="@null"
                    android:imeOptions="actionUnspecified"
                    android:textColorHint="#212121"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:padding="@dimen/_2dp"
                    android:singleLine="true"

                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#212121"
                    android:hint="Current Password"
                    />

            </com.vempower.eezyclinic.views.MyTextInputLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.15"
                android:layout_marginRight="@dimen/_12dp"
                android:background="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/_15dp"
            android:orientation="vertical">



            <com.vempower.eezyclinic.views.MyTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/background_shape_idle"
                android:textColorHint="#212121"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#99212121">

                <com.vempower.eezyclinic.views.MyEditTextBlackCursorRR
                    android:id="@+id/new_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_marginBottom="@dimen/_2dp"
                    android:background="@null"
                    android:imeOptions="actionUnspecified"
                    android:textColorHint="#212121"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:padding="@dimen/_2dp"
                    android:singleLine="true"

                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#212121"
                    android:hint="New Password"
                    />

            </com.vempower.eezyclinic.views.MyTextInputLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.15"
                android:layout_marginRight="@dimen/_12dp"
                android:background="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/_15dp"
            android:orientation="vertical">



            <com.vempower.eezyclinic.views.MyTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/background_shape_idle"
                android:textColorHint="#212121"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#99212121">

                <com.vempower.eezyclinic.views.MyEditTextBlackCursorRR
                    android:id="@+id/re_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_marginBottom="@dimen/_2dp"
                    android:background="@null"
                    android:imeOptions="actionUnspecified"
                    android:textColorHint="#212121"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:padding="@dimen/_2dp"
                    android:singleLine="true"

                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#212121"
                    android:hint="Re enter New Password"
                    />

            </com.vempower.eezyclinic.views.MyTextInputLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.15"
                android:layout_marginRight="@dimen/_12dp"
                android:background="@color/black"
                />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>



    <android.support.v7.widget.AppCompatButton

        android:layout_alignParentBottom="true"
        android:id="@+id/appointment_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:clickable="true"
        android:layout_marginLeft="@dimen/_24dp"
        android:layout_marginRight="@dimen/_24dp"
        android:maxLines="1"
        android:padding="@dimen/_4dp"
        android:textAllCaps="false"
        android:background="@drawable/button_bg"

        android:textSize="@dimen/_16sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#ffffff"

        android:text="Change Password"

        />




</RelativeLayout>