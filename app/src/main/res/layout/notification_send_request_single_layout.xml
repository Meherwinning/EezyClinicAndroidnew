<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5dp"
    android:layout_marginLeft="@dimen/_5dp"
    android:layout_marginRight="@dimen/_5dp"
    android:layout_marginTop="@dimen/_7dp"
    android:background="@drawable/view_selector"
    android:clickable="true"
    card_view:cardBackgroundColor="@color/white"
    android:elevation="@dimen/_5dp"


    card_view:cardElevation="@dimen/_6dp"
    card_view:cardCornerRadius="@dimen/_5dp"
    >

    <!-- <FrameLayout
         android:background="@drawable/card_edge"
         android:layout_width="1dp"
         android:layout_height="match_parent"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_12dp"
        android:paddingBottom="@dimen/_12dp"

        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"

        >



        <LinearLayout
            android:id="@+id/content_linear1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout


                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_10dp"

                android:orientation="vertical">

                 <TextView    android:fontFamily="@font/roboto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sp"

                    android:textStyle="normal"
                    android:textColor="#62bb50"
                    android:hint="Title"
                    android:text="Request to add as a Family Member"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                     <TextView    android:fontFamily="@font/roboto"
                        android:id="@+id/message_tv"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sp"
                        android:hint="Message"
                        android:textStyle="normal"
                        android:textColor="#212121"
                        />

                     <TextView    android:fontFamily="@font/roboto"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4dp"
                        android:textSize="@dimen/_11sp"
                        android:text="@string/notification_send_request_note_lbl"
                        android:textStyle="normal"
                        android:textColor="#FFDF4D47"
                        />



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rejected_linear"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                     <TextView    android:fontFamily="@font/roboto"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4dp"
                        android:textSize="@dimen/_16sp"
                        android:text="Status: "
                        android:textStyle="normal"
                        android:textColor="#212121"
                        />
                     <TextView    android:fontFamily="@font/roboto"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4dp"
                        android:textSize="@dimen/_16sp"
                        android:text="Rejected"
                        android:textStyle="normal"
                        android:textColor="#FFDF4D47"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatButton

                        android:layout_alignParentBottom="true"
                        android:id="@+id/accept_bt"
                        android:layout_width="@dimen/_90dp"
                        android:layout_height="@dimen/_42dp"
                        android:clickable="true"
                        android:layout_marginRight="@dimen/_30dp"
                        android:maxLines="1"
                        android:padding="@dimen/_4dp"
                        android:textAllCaps="false"
                        android:background="@drawable/background_accept"

                        android:textSize="@dimen/_16sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:textColor="#ffffff"

                        android:text="Accept"

                        />


                    <androidx.appcompat.widget.AppCompatButton

                        android:layout_alignParentBottom="true"
                        android:id="@+id/reject_bt"
                        android:layout_width="@dimen/_90dp"
                        android:layout_height="@dimen/_42dp"
                       android:layout_marginBottom="@dimen/_8dp"
                        android:clickable="true"
                        android:maxLines="1"
                        android:padding="@dimen/_4dp"
                        android:textAllCaps="false"
                        android:background="@drawable/background_reject"

                        android:textSize="@dimen/_16sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:textColor="#ffffff"

                        android:text="Reject"

                        />


                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="@dimen/_18dp"

                android:src="@drawable/right_arr2"
                android:layout_height="wrap_content" />
        </LinearLayout>







    </RelativeLayout>


</androidx.cardview.widget.CardView>
